{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/gruncellka/porto-data/refs/heads/main/schemas/features.schema.json",
    "title": "Features Schema",
    "description": "Schema for service features definitions",
    "type": "object",
    "required": [
        "file_type",
        "features"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri",
            "description": "JSON Schema URI reference"
        },
        "file_type": {
            "type": "string",
            "const": "features",
            "description": "File type identifier"
        },
        "features": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "label",
                    "description"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z_]+$",
                        "description": "Feature ID"
                    },
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "description": "German feature name"
                    },
                    "label": {
                        "type": "string",
                        "minLength": 1,
                        "description": "English feature label"
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Feature description"
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}
