{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/gruncellka/porto-data/refs/heads/main/definitions/config/fallback-config.schema.json",
    "title": "FallbackConfig",
    "description": "Fallback behavior configuration",
    "type": "object",
    "properties": {
        "enabled": {
            "type": "boolean",
            "default": false
        },
        "queue_enabled": {
            "type": "boolean",
            "default": false
        },
        "max_queue_size": {
            "type": "integer",
            "minimum": 0,
            "default": 1000
        },
        "replay_on_reconnect": {
            "type": "boolean",
            "default": true
        },
        "policy": {
            "type": "string",
            "enum": ["fail-open", "fail-closed"],
            "default": "fail-open"
        }
    },
    "additionalProperties": false
}
