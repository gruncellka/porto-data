{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/gruncellka/porto-data/refs/heads/main/schemas/dimensions.schema.json",
    "title": "Dimensions Schema",
    "description": "Schema for envelope dimension definitions",
    "type": "object",
    "required": [
        "file_type",
        "unit",
        "dimensions"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri",
            "description": "JSON Schema URI reference"
        },
        "file_type": {
            "type": "string",
            "const": "dimensions",
            "description": "File type identifier"
        },
        "unit": {
            "type": "object",
            "required": [
                "dimension"
            ],
            "properties": {
                "dimension": {
                    "type": "string",
                    "const": "mm"
                }
            },
            "additionalProperties": false
        },
        "dimensions": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "label",
                    "standard",
                    "size",
                    "print_area",
                    "stamp_area",
                    "orientation",
                    "weight_tier"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[A-Z0-9]+$",
                        "description": "Dimension ID"
                    },
                    "label": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Human-readable dimension label"
                    },
                    "standard": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Standard specification"
                    },
                    "size": {
                        "type": "object",
                        "required": [
                            "width",
                            "height"
                        ],
                        "properties": {
                            "width": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Width in millimeters"
                            },
                            "height": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Height in millimeters"
                            },
                            "thickness": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "Thickness in millimeters"
                            }
                        },
                        "additionalProperties": false
                    },
                    "print_area": {
                        "type": "object",
                        "required": [
                            "x",
                            "y",
                            "width",
                            "height"
                        ],
                        "properties": {
                            "x": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "X coordinate in millimeters"
                            },
                            "y": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "Y coordinate in millimeters"
                            },
                            "width": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Width in millimeters"
                            },
                            "height": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Height in millimeters"
                            }
                        },
                        "additionalProperties": false
                    },
                    "stamp_area": {
                        "type": "object",
                        "required": [
                            "x",
                            "y",
                            "width",
                            "height"
                        ],
                        "properties": {
                            "x": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "X coordinate in millimeters"
                            },
                            "y": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "Y coordinate in millimeters"
                            },
                            "width": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Width in millimeters"
                            },
                            "height": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Height in millimeters"
                            }
                        },
                        "additionalProperties": false
                    },
                    "window_supported": {
                        "type": "boolean",
                        "description": "Whether window is supported"
                    },
                    "supports_window": {
                        "type": "boolean",
                        "description": "Whether window is supported (alternative field)"
                    },
                    "window_area": {
                        "type": "object",
                        "required": [
                            "x",
                            "y",
                            "width",
                            "height"
                        ],
                        "properties": {
                            "x": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "X coordinate in millimeters"
                            },
                            "y": {
                                "type": "integer",
                                "minimum": 0,
                                "description": "Y coordinate in millimeters"
                            },
                            "width": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Width in millimeters"
                            },
                            "height": {
                                "type": "integer",
                                "minimum": 1,
                                "description": "Height in millimeters"
                            }
                        },
                        "additionalProperties": false
                    },
                    "orientation": {
                        "type": "string",
                        "enum": [
                            "landscape",
                            "portrait"
                        ],
                        "description": "Envelope orientation"
                    },
                    "weight_tier": {
                        "type": "string",
                        "pattern": "^W[0-9]+$",
                        "description": "Weight tier ID reference"
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}
