{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/gruncellka/porto-data/refs/heads/main/schemas/services.schema.json",
    "title": "Services Schema",
    "description": "Schema for Deutsche Post services definitions",
    "type": "object",
    "required": [
        "file_type",
        "services"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri",
            "description": "JSON Schema URI reference"
        },
        "file_type": {
            "type": "string",
            "const": "services",
            "description": "File type identifier"
        },
        "services": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "description",
                    "features"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z_]+$",
                        "description": "Service ID"
                    },
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "description": "German service name"
                    },
                    "name_en": {
                        "type": "string",
                        "minLength": 1,
                        "description": "English service name (optional)"
                    },
                    "description": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Service description"
                    },
                    "features": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string",
                            "pattern": "^[a-z_]+$",
                            "description": "Feature ID reference"
                        },
                        "description": "List of feature IDs this service provides"
                    },
                    "source_id": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "description": "Deutsche Post PPL service identifier (note: services in PPL are typically composite products, not standalone IDs)"
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}
